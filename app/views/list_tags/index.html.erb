<p id="notice"><%= notice %></p>

<h1>List Tags</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list_tags.each do |list_tag| %>
      <tr>
        <td><%= list_tag.name %></td>
        <td><%= link_to 'Show', list_tag %></td>
        <td><%= link_to 'Edit', edit_list_tag_path(list_tag) %></td>
        <td><%= link_to 'Destroy', list_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

